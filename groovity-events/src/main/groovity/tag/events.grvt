 static conf=[
 	'groovity.event.url':''
 ]
 
@Tag(
	info="call within HTML head to wire in event socket",
	attrs=[
		@Attr(
			name="url",
			info="specify a URL to connect to an event socket",
			required=false
		),
		@Attr(
			name="var",
			info="specify a global javascript variable name for the socket, defaults to 'socket'",
			required=false
		),
	]
)
class Events{
	def tag(Map atts, Closure body){
		def url = atts.get('url')
		if(!url){
			def defaultUrl = conf.get('groovity.event.url')
			if(defaultUrl){
				url = defaultUrl
			}
		}
		def varName = atts.get('var')
		if(!varName){
			varName = 'socket'
		}
		stream <~
		<script type="text/javascript" src = "/static/groovity/events/groovity-events.js"> </script>
		<script type="text/javascript"> 
			window.${varName} = new EventSocket('${url}')
		</script>
		~>
	}
}
